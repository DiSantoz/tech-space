<article class="post">
  <div class="title">
        <a href="{{post_content}}" target="_blank">{{post.title}}</a>
        <span>Posted by {{post.user.username}} on
        {{format_date post.created_at}}</span>
      </div>
      <div>
          <span>{{post.post_content}}</span>
      </div>
      <div class="meta">
     <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
{{!-- Link function for comments --}}
<script src="/javascript/comment.js"></script>
{{/if}}

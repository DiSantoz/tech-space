<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <div class="input-group mb-3">
        <span>Title:</span><input name="post-title" class="post-title" type="text" value="{{post.title}}" />
      </div>
      <div class="input-group mb-3">
   <span>Content: </span> <input name="post-content" class="post-content" type="text" value="{{post.post_content}}" />
      </div>
      
    </div>
    <div>
       Created on {{format_date post.created_at}}
      
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Update post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
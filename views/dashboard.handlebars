<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title" class="new-post">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content" class="new-post">Content</label>
            <input id="post-content" name="post-content" />
        </div>
        <button type="submit" class="btn-primary">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            <article class="post">
                <div class="card">
                    <div class="card-body title">
                        <a href="/dashboard/edit/{{post.id}}">{{post.title}}</a>
                        <span>{{format_date post.created_at}}</span>
                    </div>
                    <div class="card-body">
                    <span class="card-text">{{post_content}}</span>
                </div>
                <div class="meta">
                    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
                            comments.length}}</a>
                </div>
            </article>

        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>